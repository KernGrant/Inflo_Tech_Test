@model UserManagement.Data.Entities.UserActionLog

<h2>Log Details</h2>

<div class="card p-3">
    <p><strong>Log ID:</strong> @Model.Id</p>
    <p><strong>User ID:</strong> @Model.UserId</p>
    <p><strong>Action:</strong> @Model.Action</p>
    <p><strong>Timestamp:</strong> @Model.Timestamp</p>
    <p><strong>Details:</strong> @Model.Details</p>
</div>

<a asp-controller="Logs" asp-action="List" class="btn btn-secondary mt-3">Back to Logs</a>
