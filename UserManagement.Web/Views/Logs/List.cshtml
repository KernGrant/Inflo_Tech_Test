@model IEnumerable<UserManagement.Services.Models.Logging.UserActionLog>

<h2>Application Logs</h2>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>User ID</th>
                <th>Action</th>
                <th>Details</th>
                <th></th> <!-- For the "View Details" link -->
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Timestamp</td>
                    <td>@log.UserId</td>
                    <td>@log.Action</td>
                    <td>@log.Details</td>
                    <td>
                        <a asp-controller="Logs" asp-action="Details" asp-route-id="@log.Id" class="btn btn-sm btn-primary">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No logs have been recorded yet.</p>
}
