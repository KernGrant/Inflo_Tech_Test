@model List<UserManagement.Data.Entities.UserActionLog>

@{
    ViewData["Title"] = "Logs";
    var currentPage = ViewData["CurrentPage"] as int? ?? 1; //defaults to 1 if null
    var totalPages = ViewData["TotalPages"] as int? ?? 1;
    var filteredUserId = ViewData["FilteredUserId"] as int?;
}

<h2>Logs</h2>

<form method="get" asp-action="List" class="mb-3 d-flex align-items-center">
    <label class="me-2">Filter by User ID:</label>
    <input type="number" name="userId" value="@(filteredUserId ?? 0)" class="form-control me-2" style="width:100px;" min="1" />
    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="List" class="btn btn-secondary ms-2">Clear</a>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Log Entry</th>
            <th>Affected UserId</th>
            <th>Action</th>
            <th>Timestamp</th>
            <th>Details</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Id</td>
                <td>@log.UserId</td>
                <td>@log.Action</td>
                <td>@log.Timestamp.ToString("g")</td> @* general date/time short *@
                <td>@(log.Details?.Length > 50 ? log.Details.Substring(0, 50) + "…" : log.Details ?? "No additional information to show.")</td>
                <td>
                    <a asp-controller="Logs" asp-action="Details" asp-route-id="@log.Id" class="btn btn-sm btn-outline-primary">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="d-flex justify-content-between align-items-center">
    <div>
        @if (currentPage > 1)
        {
            <a class="btn btn-outline-primary btn-sm" asp-action="List" asp-route-page="@(currentPage - 1)">Previous</a>
        }
        @if (currentPage < totalPages)
        {
            <a class="btn btn-outline-primary btn-sm" asp-action="List" asp-route-page="@(currentPage + 1)">Next</a>
        }
    </div>

    <div>
        <form method="get" asp-action="List" class="d-inline-flex">
            <label class="me-2">Go to page:</label>
            <input type="number" name="page" min="1" max="@totalPages" value="@currentPage" class="form-control form-control-sm me-2" style="width:80px;" />
            <button type="submit" class="btn btn-primary btn-sm">Go</button>
        </form>
    </div>
</div>

<p class="mt-2">Page @currentPage of @totalPages</p>
