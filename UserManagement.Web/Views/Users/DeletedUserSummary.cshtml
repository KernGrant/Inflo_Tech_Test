@using UserManagement.Data.Entities
@model UserManagement.Data.Entities.UserActionLog

@{
    ViewData["Title"] = "Deleted User";
    var logs = ViewData["UserLogs"] as IEnumerable<UserActionLog>;
}

<h2>User Account Deleted</h2>
<p>This user account no longer exists in the system, but you can still view their historical logs below.</p>

@if (logs != null && logs.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Timestamp</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in logs)
            {
                <tr>
                    <td>@log.Action</td>
                    <td>@log.Timestamp.ToString("g")</td>
                    <td>@log.Details</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No logs found for this user.</p>
}

<a asp-action="List" asp-controller="Logs" class="btn btn-secondary mt-3">Back to Logs</a>
